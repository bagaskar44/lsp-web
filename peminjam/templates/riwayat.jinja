<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <title>Riwayat - Arcadia Library</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
        <div class="container">
            <a class="navbar-brand" href="/dashboard">Perpustakaan Arcadia</a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/dashboard">Daftar Buku</a>
                <a class="nav-link" href="/keranjang">Keranjang ({{ session['keranjang']|length }})</a>
                <a class="nav-link active" href="/riwayat">Riwayat Peminjaman</a>
                <a class="nav-link btn btn-danger btn-sm text-white ms-2" href="/logout">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <h3>Riwayat Peminjaman Saya</h3>
        
        {% with messages = get_flashed_messages(with_categories=true) %}
            {% if messages %}
                {% for category, message in messages %}
                    <div class="alert alert-{{ category }}">{{ message }}</div>
                {% endfor %}
            {% endif %}
        {% endwith %}

        <table class="table table-bordered mt-3">
            <thead class="table-light">
                <tr>
                    <th>Kode Pinjam</th>
                    <th>Tanggal Pesan</th>
                    <th>Buku yang Dipinjam</th>
                    <th>Wajib Kembali</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                {% for r in riwayat %}
                <tr>
                    <td>#{{ r['kode_pinjam'] }}</td>
                    <td>{{ r['tgl_pesan'] }}</td>
                    <td>{{ r['daftar_buku'] }}</td>
                    <td>{{ r['tgl_wajibkembali'] }}</td>
                    <td>
                        {% if r['status'] == 'DIPROSES' %}
                            <span class="badge bg-warning text-dark">DIPROSES</span>
                        {% elif r['status'] == 'DISETUJUI' %}
                            <span class="badge bg-success">SIAP DIAMBIL</span>
                        {% elif r['status'] == 'SELESAI' %}
                            <span class="badge bg-secondary">DIKEMBALIKAN</span>
                        {% else %}
                            <span class="badge bg-danger">{{ r['status'] }}</span>
                        {% endif %}
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="5" class="text-center">Belum ada riwayat peminjaman.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</body>
</html>